generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id
  name          String
  email         String       @unique
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  accounts      Account[]
  Album         Album[]
  images        Image[]
  reflections   Reflection[]
  sessions      Session[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model Reflection {
  id              String            @id
  title           String
  content         String
  publishDate     DateTime?
  slug            String            @unique
  status          PublicationStatus @default(DRAFT)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  authorId        String
  featuredImageId String?
  tags            ReflectionTag[]
  author          User              @relation(fields: [authorId], references: [id])
  featuredImage   Image?            @relation("FeaturedImage", fields: [featuredImageId], references: [id])

  @@map("reflections")
}

model Tag {
  id          String          @id
  name        String          @unique
  slug        String          @unique
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  reflections ReflectionTag[]

  @@map("tags")
}

model ReflectionTag {
  reflectionId String
  tagId        String
  assignedAt   DateTime   @default(now())
  reflection   Reflection @relation(fields: [reflectionId], references: [id], onDelete: Cascade)
  tag          Tag        @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([reflectionId, tagId])
  @@map("reflection_tags")
}

model Album {
  id           String   @id @default(uuid())
  name         String
  description  String?
  date         DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  uploadedById String
  uploadedBy   User     @relation(fields: [uploadedById], references: [id])
  images       Image[]

  @@map("albums")
}

model Image {
  id         String       @id @default(uuid())
  url        String
  alt        String?
  caption    String?
  width      Int?
  height     Int?
  size       Int?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  albumId    String
  userId     String?
  album      Album        @relation(fields: [albumId], references: [id], onDelete: Cascade)
  User       User?        @relation(fields: [userId], references: [id])
  featuredIn Reflection[] @relation("FeaturedImage")

  @@map("images")
}

model ContactSubmission {
  id        String   @id
  name      String
  email     String
  phone     String?
  subject   String?
  message   String
  status    String   @default("NEW")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contact_submissions")
}

model Congregation {
  id               String       @id @default(uuid())
  name             String
  title            String?
  nameWithoutTitle String?
  birthday         DateTime?
  age              Int?
  status           String       @default("active")
  whatsappNumber   String?      @unique
  address          String?
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  attendances      Attendance[]

  @@map("congregations")
}

model SermonSession {
  id          String       @id @default(uuid())
  name        String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  attendances Attendance[]

  @@map("sermon_sessions")
}

model Attendance {
  id             String        @id @default(uuid())
  sessionId      String
  congregationId String
  date           DateTime
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  congregation   Congregation  @relation(fields: [congregationId], references: [id], onDelete: Cascade)
  sermonSession  SermonSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([congregationId, sessionId, date])
  @@index([sessionId])
  @@index([congregationId])
  @@map("attendances")
}

model Inventory {
  id           String                 @id @default(uuid())
  name         String
  quantity     Int
  category     InventoryCategory
  status       InventoryStatus
  price        Int
  purchaseDate DateTime
  createdAt    DateTime               @default(now())
  updatedAt    DateTime               @updatedAt
  inspections  InventoryInspection[]
  maintenances InventoryMaintenance[]

  @@map("inventories")
}

model InventoryInspection {
  id          String          @id @default(uuid())
  status      InventoryStatus
  inventoryId String
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  inventory   Inventory       @relation(fields: [inventoryId], references: [id], onDelete: Cascade)

  @@map("inventory_inspections")
}

model InventoryMaintenance {
  id          String                     @id @default(uuid())
  name        String
  description String?
  status      InventoryMaintenanceStatus
  cost        Int
  quantity    Int
  inventoryId String
  createdAt   DateTime                   @default(now())
  updatedAt   DateTime                   @updatedAt
  inventory   Inventory                  @relation(fields: [inventoryId], references: [id], onDelete: Cascade)

  @@map("inventory_maintenances")
}

enum PublicationStatus {
  DRAFT
  PUBLISHED
}

enum InventoryCategory {
  SOUNDSYSTEM
  MULTIMEDIA
  OTHER
}

enum InventoryStatus {
  GOOD
  DAMAGED
  MAINTENANCE
  DISPOSED
}

enum InventoryMaintenanceStatus {
  ONGOING
  COMPLETED
}
